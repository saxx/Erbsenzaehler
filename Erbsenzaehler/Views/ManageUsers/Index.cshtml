@model Erbsenzaehler.ViewModels.ManageUsers.IndexViewModel

<h2>Benutzer verwalten</h2>

<p>
    @Html.ActionLink("Neuen Benutzer anlegen", "Create", null, new { @class = "btn btn-default" })
</p>
<table class="table table-striped">
    @foreach (var item in Model.Users)
    {
        <tr>
            <td>
                @item.Email
            </td>
            <td>
                @Html.ActionLink("Diesen Benutzer löschen", "Delete", new { id = item.Id }, new { @class = "btn btn-danger pull-right" })
            </td>
        </tr>
    }
</table>
